  <div class="container">

<!-- User details **************************************************************** -->

<% @users.take(3).each do |user| %>
    <div class="user">

      <div class="user_pic">
        <%= image_tag user.photo %>
      </div>

      <p><%= user.name %></p>
      <p><%= user.location %></p>

      <button>Following</button>
      <button>Followers</button>

      <%= button_to 'Follow', follow_new_path(user.id) %>

      <p>Inmail</p>

    </div>
<% end %>
<!-- Artform details ************************************************************* -->

    <div class="arty">

      <h3>Artform:</h3>

      <div class="artform_pic"></div>

      <h3>Bio/Comments</h3>
      <div class="bio"></div>

    </div>

<!-- Work preferences ************************************************************** -->

    <div class="work">

      <ul>
        <li>Fulltime</li>
        <li>Part time</li>
        <li>Shift work</li>
        <li>Weekend work</li>
        <li>Contract</li>
        <li>Any</li>
      </ul>

      <p>Preferences</p>

    </div>

  </div>

</div>

